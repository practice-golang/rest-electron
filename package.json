{
  "name": "electron-vue",
  "version": "0.0.2",
  "author": "Practice Golang <practice.golang@gmail.com>",
  "license": "CC0-1.0",
  "description": "Electron Vue mixed boilerplate",
  "main": "main.js",
  "scripts": {
    "electron": "npm run build:vue & electron .",
    "vue": "vue-cli-service serve",
    "lint": "vue-cli-service lint",
    "build:vue": "vue-cli-service build",
    "build:osx": "npm run build:vue & copy ./server_prepare/servermacos ./dist & build --mac",
    "build:linux": "npm run build:vue & copy ./server_prepare/server ./dist & build --linux --x64",
    "build:win": "npm run build:vue & copy .\\server_prepare\\server.exe .\\dist & build --win --x64"
  },
  "build": {
    "productName": "ElectronVue",
    "appId": "com.electron.vue",
    "asar": true,
    "protocols": {
      "name": "electronVue",
      "schemes": [
        "electronVue"
      ]
    },
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./resources/installer/icon.icns"
    },
    "dmg": {
      "title": "electronVue",
      "icon": "./resources/installer/icon.icns"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./resources/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "./resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "resources/installer/",
      "output": "electron-dist",
      "app": "."
    }
  },
  "repository": "https://github.com/practice-golang/electron-vue",
  "keywords": [
    "Electron",
    "Vue"
  ],
  "dependencies": {
    "vue": "^2.5.21",
    "vue-router": "^3.0.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.3.0",
    "@vue/cli-plugin-eslint": "^3.3.0",
    "@vue/cli-service": "^3.3.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "electron": "^4.0.1",
    "electron-builder": "^20.38.5",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.5.21"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
